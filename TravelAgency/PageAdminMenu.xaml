<Page x:Class="TravelAgency.PageAdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelAgency"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAdminMenu">

    <Grid>
       
        <StackPanel>
            <Button Margin="0,50,0,10" Name ="gotoPageAdminShowData" Width="350" Height="50" Foreground="#dee2e6" Click="gotoPageAdminShowData_Click" Template="{StaticResource ButtonTemplate}" FontSize="20">Пользователи</Button>
            <Button Name ="gotoPageAdminTour" Margin="0,0,0,10" Width="350" Height="50" Foreground="#dee2e6" Click="gotoPageAdminTour_Click" Template="{StaticResource ButtonTemplate}" FontSize="20">Туры</Button>
            <Button Name="gotoPageSale" Width="350" Height="50" Margin="0,0,0,10" Foreground="#dee2e6" Click="gotoPageSale_Click" Template="{StaticResource ButtonTemplate}" FontSize="20">Продажи</Button>
            <Button Name="gotoPageUserMenu" Width="350" Margin="0,0,0,10" Height="50" Foreground="#dee2e6"  Template="{StaticResource ButtonTemplate}" FontSize="20" Click="gotoPageUserMenu_Click">Личный кабинет</Button>
        </StackPanel>
    </Grid>
</Page>
